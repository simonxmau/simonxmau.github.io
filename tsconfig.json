{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "components/*.astro",
//        "components/*"
      ],
      "@layouts/*": [
        "layouts/*.astro"
      ],
      "@utils/*": [
        "utils/*.ts"
      ],
      "@style/*": [
        "style/*"
      ],
      "@/scripts/*": [
        "scripts/*"
      ],
      "@config": [
        "config.ts"
      ]
    }
  }
}